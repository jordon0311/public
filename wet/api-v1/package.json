{
  "author": "jordon",
  "dependencies": {
    "@nestjs/common": "^10.2.10",
    "@nestjs/core": "^10.2.10",
    "@nestjs/platform-express": "^10.2.10",
    "@nestjs/swagger": "^7.1.16",
    "@prisma/client": "^5.6.0",
    "axios": "^1.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "description": "Wetpages API",
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.2.10",
    "@stylistic/eslint-plugin-js": "^1.4.1",
    "@stylistic/eslint-plugin-ts": "^1.4.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.10",
    "@types/lodash": "^4.14.202",
    "@types/node": "^20.10.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "dotenv": "^16.3.1",
    "dotenv-cli": "^7.3.0",
    "dotenv-run-script": "^0.4.1",
    "eslint": "^8.54.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "eslint-plugin-unused-imports": "^3.0.0",
    "jest": "^29.7.0",
    "npm-check-updates": "^16.14.11",
    "prettier": "^3.1.0",
    "prisma": "^5.6.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.2",
    "typescript-transform-paths": "^3.4.6"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testEnvironment": "node",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
  },
  "license": "UNLICENSED",
  "name": "api",
  "prisma": {
    "seed": "ts-node prisma/seed"
  },
  "private": true,
  "scripts": {
    "add:controller": "scripts/bash/createController.zsh",
    "add:service": "scripts/bash/createService.zsh",
    "build": "nest build",
    "db:generate": "npm run env:local -- npx prisma generate --schema prisma/schema.prisma",
    "db:migrate": "npm run env:local -- npx prisma migrate dev --schema prisma/schema.prisma && npm run env:local -- npm run db:generate",
    "db:push": "npm run env:local -- npx prisma migrate deploy --schema prisma/schema.prisma && npm run db:generate",
    "db:reset": "npm run db:push && npm run db:seed",
    "db:seed": "npm run env:local -- npx prisma db seed",
    "env:local": "dotenv -e .env.local --",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "nest start",
    "start:debug": "nest start --debug --watch",
    "start:dev": "npm run env:local -- nest start --watch",
    "start:prod": "node dist/src/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:watch": "jest --watch"
  },
  "version": "0.0.1"
}
